/* pages/line/card/card.wxss */
.container{
  padding: 0;
  margin: 0;
}

/* 产线-当天累计用水 */
.line{
  width: 100%;
  height: 600rpx;
  background-color: #04B8E8;
  color: #fff;
  padding-bottom: 10rpx;
}

.container .line .line_top{
  display: flex;
  position: relative;

}

.container .line .line_top .sum_today{
  font-size: 30rpx;
  width: 300rpx;
  height: 300rpx;
  margin: 18rpx auto;
  border-radius: 50%;
  text-align: center;
  position: relative;
  border: 10rpx solid #fff;
}

.container .line .line_top .sum_today text{
  position: absolute;
  left: 40rpx;
  top: 74rpx;
 
}
.container .line .line_top .sum_today .sum_today_val{
  font-size: 110rpx;
  margin-top: 100rpx;
}

.container .line .line_top .warn_msg{
  position: absolute;
  right: 0;
  background-color: rgb(216, 130, 144);
  width: 180rpx;
  font-size: 22rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 40rpx;
  border-radius: 22rpx;
  border: 1px solid #fff;
  right: -52rpx;

}


/* 产线用水详情&产能耗水对比 */
.container .line .line_middle{
  display: flex;
  font-size: 22rpx;
  display: flex;
  width: 54%;
  margin-left: auto;
  margin-right: auto;
  justify-content: space-around;
}

.container .line .line_middle .btn{
  background-color: #487ef1;
  border: 1px solid #fff;
  padding: 8rpx 18rpx;
  border-radius: 24rpx;
}

/* 当天运行时长&昨天省水&当天省水 */
.container .line .line_bottom{
  display: flex;
  background-color: #67d1ee;
  padding: 30rpx 0;
  margin-top: 20rpx;
}

.container .line .line_bottom .bottom_item{
  text-align: center;
  flex: 1;
  font-size: 22rpx;
}

.container .line .line_bottom .bottom_item .item_val{
  font-size: 50rpx;
}

.container .line .line_bottom .saves_today{
  border-left: 1px solid #fff;
  border-right: 1px solid #fff;
}

/* 轮播图卡片 */
.container .card{
  width: 100%;
  height: 1500rpx;
  background-color: #eee;
}

.container .card swiper{
  width: 100%;
  height: 1300rpx;
  overflow:auto;
}

.container .card swiper swiper-item{
  margin-top:50rpx;
  margin-left: 36rpx;
  box-sizing: border-box;
  padding-left: 40rpx;
  padding-right: 40rpx;
  background-color:rgba(103,209,238, 0.1);
  box-shadow: 10px 5px 5px rgb(177, 159, 159);
  width: 680rpx !important;
  border-radius: 36rpx;
  height: 1300rpx !important;
}

.container .card swiper swiper-item .content .header{
  font-size: 22rpx;
}

.container .card swiper swiper-item .content .header view .header_state{
  display: inline-block;
  background-color: #fff;
  margin-left: 40rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  color: #f00;
}

.container .card swiper swiper-item .content .header view .header_history{
  margin-left: 80rpx;
  color: rgb(129, 123, 123);
}

.container .card swiper swiper-item .content .header .name{
  color: rgb(129, 123, 123);
}


.container .card swiper swiper-item .content .header view .header_name{
  font-size: 32rpx;
  font-weight: bolder;
}

.container .card swiper swiper-item .content .infobar .bar_item{
  display: flex;
  height: 140rpx;
  background-color: #fff;
  line-height: 140rpx;
  border-radius: 22rpx;
  margin-top: 20rpx;
  position: relative;
}

.container .card swiper swiper-item .content .infobar .bar_item .item_icon{
  width: 100rpx;
  height: 100rpx;
  background-color: rgb(136, 238, 136);
  border-radius: 20rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
}

.container .card swiper swiper-item .content .infobar .bar_item .purple{
  background-color: purple;
}

.container .card swiper swiper-item .content .infobar .bar_item .blue{
  background-color: skyblue;
}

.container .card swiper swiper-item .content .infobar .bar_item .item_text{
  margin-right: 120rpx;
  font-size: 32rpx;
}

.container .card swiper swiper-item .content .infobar .item_val{
  color: #0413e8;
  position: absolute;
  right: 40rpx;
}

.container .card swiper swiper-item .content .infobar .item_val span{
  font-size: 32rpx;
  font-weight: bolder;
}

.container .card swiper swiper-item .content .infostate{
  display: flex;
  height: 140rpx;
  background-color: #fff;
  border-radius: 22rpx;
  margin-top: 20rpx;
  justify-content: space-between;
  text-align: center;
  padding: 30rpx;
  box-sizing: border-box;
}

.container .card swiper swiper-item .content .infostate .phflow{
  border-right: 1px solid #eee;
  border-left: 1px solid #eee;
}

.container .card swiper swiper-item .content .infostate view{
  flex: 1;
}

.wx-swiper-dots{
  position:relative;
  left: unset!important;
  right: 45%;
  top: 10rpx;
}



/* 当前台数 */
.container .info{
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  text-align: center;
  padding: 40rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.container .info view .txt{
  color: rgb(129, 123, 123);
  font-size: 22rpx;
}

.container .info view .val{
  font-size: 30rpx;
}

